<!-- コメントフォーム -->
<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with(model: [board, Comment.new], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :body, 'コメント' %>
        <%= form.text_area :body, rows: 4, class: 'form-control mb-3', placeholder: 'コメント' %>
      </div>
      <%= form.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
