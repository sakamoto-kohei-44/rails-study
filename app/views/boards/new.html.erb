<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
       <%= form_with model: @board, local: true do |f| %>
        <div class="form-group">
          <%= f.label (t 'activerecord.attributes.board.title') %>
          <%= f.text_field :title, class: 'form-control', id: 'board_title'%>
        </div>
        <div class="form-group">
          <%= f.label (t 'activerecord.attributes.board.body') %>
          <%= f.text_area :body, class: 'form-control', id: 'board_body', rows: 10 %>
        </div>
        <%= f.submit (t 'defaults.register'), class: 'btn btn-primary'%>
       <% end %>

    </div>
  </div>
</div>