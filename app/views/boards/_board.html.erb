<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <%= image_tag board.board_image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to board.title, board_path(board) %>
        </h4>
        <div class="d-flex justify-content-between align-items-center">
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= icon 'far', 'user' %>
              <%= board.user.decorate.full_name %>
            </li>
            <li class="list-inline-item">
              <%= icon 'far', 'calendar' %>
              <%= l board.created_at, format: :long %>
            </li>
          </ul>
          <% if current_user && current_user.bookmark?(board) %>
            <%= link_to board_bookmarks_path(board), method: :delete do %>
              <i class="fas fa-star text-danger"></i>
            <% end %>
          <% elsif current_user %>
            <%= link_to board_bookmarks_path(board), method: :post do %>
              <i class="far fa-star text-primary"></i>
            <% end %>
          <% end %>
        </div>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
